<div class="wrap">
	
<div class="loginWrapper fadeInDown">
	<div class="loginContainer">
		<div class="fadeIn first">
			<p class="loginWrapper">Edit Comment: </p>
    	</div>
		<form action="/pages/<%= page_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
