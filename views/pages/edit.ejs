<%- include ("../partials/header") %>
<%- include("../partials/sidebar") %>

<div class="wrap fadeIn">

<div class="loginWrapper">
	<div class="loginContainer">
		<p class="loginWrapper">Edit page: " <%= page.name %> "</p>
		<form action="/pages/<%= page._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="page[name]" value="<%= page.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="page[price]" value="<%= page.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="page[image]" value="<%= page.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="page[description]" value="<%= page.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-secondary btn-block"> Submit </button>
			</div>
		</form>
		<a href="/pages/<%= page.id %>">Go Back</a>
	</div>
</div>

</div>

<%- include ("../partials/footer") %>
