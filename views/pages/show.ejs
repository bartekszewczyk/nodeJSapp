<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Menu</p>
				<div class="list-group">
					<li class="list-group-item active">Home</li>
					<li class="list-group-item">Apps</li>
					<li class="list-group-item">Fun stuff</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= page.image %> ">
				<div class="caption-full">
					<h4 class="pull-right"><strong>$<%= page.price %> /night</strong></h4>
					<h4><a><%= page.name %></a></h4>
					<p> <%= page.description %> </p>
					<p>
						<em>Submitted By <%= page.author.username %></em> </p>
					<% if(currentUser && page.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-xs btn-warning" href="/pages/<%=page._id %>/edit">Edit</a>
					<form id="delete-form" action="/pages/<%= page._id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/pages/<%= page._id %>/comments/new">Add New Comment</a> 

				</div>
				<% page.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>	
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							<a class="btn btn-xs btn-warning" 
							   href="/pages/<%= page._id %>/comments/<%= comment._id %>/edit">Edit</a>
							<form id="delete-form" action="/pages/<%= page._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
								<input class="btn btn-xs btn-danger" type="submit" value="Delete">
							</form>
							<% } %>
						</div>
					</div>
				<% }); %>
			</div>
		</div>
	</div>


</div>
<%- include("../partials/footer") %>