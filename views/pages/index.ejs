<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>

<main class="fadeIn">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-2 col-md-12 col-sm-12 m-1">
        <%- include("../partials/menu") %>
      </div>

      <div class="col-lg-8 col-md-12 col-sm-12 m-1">
        <header class="jumbotron">
          <h1 class="display-3 ml-5">Welcome!</h1>
          <hr class="my-4">
          <p>
            <a class="btn btn-secondary btn-lg ml-5" href="/pages/new">Add New Page Â»</a>
          </p>
        </header>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-2 col-md-2 hidden-sm">
      </div>
      <div class="col-md-10 col-md-10 col-sm-12">
        <% pages.forEach(function(page){ %>
        <a href="/pages/<%= page._id %>">
          <figure class="col-md-4">
            <img class="img-fluid img-shadow img-animation" src="<%= page.image %>">
          </figure>
        </a>
        <% }); %>
      </div>
    </div>
  </div>

</main>
